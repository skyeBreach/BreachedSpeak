##  This file is generated by CMake when it runs a configure job, as such any changes you make will not save.
##  To change the structure of this file please see:
##  	- tooling/dev-environment/EditorConfig.cmake
##  	- tooling/dev-environment/.editorconfig.in

##  For more information on this file, please see https://editorconfig.org/

## True when this library/project is at the top level.
## Should only be true for developers of this project/package
root = true

## Root settings for all file-types/paths unless overriden
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4
tab_width = 4

## YAML files require 2 space indention (Does not allow tabs) per level
[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2
